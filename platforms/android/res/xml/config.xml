<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jacea.smartgear" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <preference name="AndroidLaunchMode" value="singleTop" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="LocalNotification">
        <param name="android-package" value="de.appplant.cordova.plugin.localnotification.LocalNotification" />
    </feature>
    <feature name="CEASimulator">
        <param name="android-package" value="es.cea.simulator.CEASimulator" />
        <param name="onload" value="true" />
    </feature>
    <name>SmartGear</name>
    <description>
        Car Easy App for car economy and security.
    </description>
    <author email="cea.psa.vigo@gmail.com" href="http://cea.altia.es">
        Juan and Alex CEA Team
    </author>
    <content src="index.html" />
    <access origin="*" />
</widget>
